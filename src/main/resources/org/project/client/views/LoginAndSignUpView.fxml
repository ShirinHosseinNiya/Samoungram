<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0" spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.client.views.LoginAndSignUpController">
    <children>
        <Label styleClass="app-title" text="SamoonGram" />
        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" styleClass="text-field" />
        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" styleClass="text-field" />
        <TextField fx:id="profileNameField" maxWidth="250.0" promptText="Profile Name (for Sign Up)" styleClass="text-field" visible="false" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonAction" styleClass="action-button" text="Login" />
                <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#handleSignUpButtonAction" styleClass="action-button" text="Sign Up" />
            </children>
        </HBox>
        <Label fx:id="statusLabel" styleClass="status-label" />
        <Button fx:id="toggleModeButton" mnemonicParsing="false" onAction="#toggleMode" styleClass="toggle-button" text="New User? Register" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <stylesheets>
        <URL value="@/org/project/client/views/css/styles.css" />
    </stylesheets>
</VBox>